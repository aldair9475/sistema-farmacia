<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <mapper namespace="dao.MedicamentoMapper">
 
 	<resultMap id="MedicamentoMap" type="models.Medicamento" >
 		<id column="id_medicamento" property="idMedicamento"/>
 		<result column="id_categoria" property="idCategoria"/>
 		<result column="id_marca" property="idMarca"/>
 		<result column="id_presentacion" property="idPresentacion"/>
 		<result column="codigo" property="codigo"/>
 		<result column="nombre" property="nombre"/>
 		<result column="descripcion" property="descripcion"/>
 		<result column="registro_sanitario" property="registroSanitario"/>
 		<result column="imagen_url" property="imagenUrl"/>
 		<result column="precio_unitario" property="precioUnitario"/>
 		<result column="stock_actual" property="stockActual"/>
 		<result column="estado" property="estado"/>
 	</resultMap>
  
 	<select id="listarMedicamentos" resultMap="MedicamentoMap">
 		SELECT id_medicamento, id_categoria, id_marca, id_presentacion, codigo, nombre, descripcion,
 		       registro_sanitario, imagen_url, precio_unitario, stock_actual, estado
 		FROM medicamentos
 		WHERE estado_auditoria = '1'
 	</select> 
 	
 	
 </mapper>