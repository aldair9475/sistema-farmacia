<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="dao.CategoriaMapper">
  	<resultMap id="CategoriaMap" type="models.Categoria">
    <id column="idcategoria" property="idCategoria"/>
    <result column="nombre" property="nombre"/>
    <result column="imagenurl" property="imagenUrl"/>
    <result column="descripcion" property="descripcion"/>
    <result column="estado" property="estado"/>
</resultMap>

<select id="listarCategorias" resultMap="CategoriaMap">
    SELECT idCategoria, nombre, imagenUrl, descripcion, estado
    FROM categoria
    WHERE estado = '1'
</select>
  
  </mapper>