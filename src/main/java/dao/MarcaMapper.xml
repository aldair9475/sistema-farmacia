<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <mapper namespace="dao.MarcaMapper">
 
 	<resultMap id="MarcaMap" type="models.Marca" >
 		<id column="idmarca" property="idMarca"/>
 		<result column="nombre" property="nombre"/>
 		<result column="descripcion" property="descripcion"/>
 		<result column="imagenurl" property="imagenUrl"/>
 		<result column="fabricante" property="fabricante"/>
 	</resultMap>
 
 	<select id="listarMarcas" resultMap="MarcaMap">
 		SELECT idmarca, nombre, descripcion, imagenurl, fabricante
 		FROM marcas
 	</select>
 	
 </mapper>